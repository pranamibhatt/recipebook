<h1>Welcome to recipebook, your guide to all recipes</h1>
<h2>Enter the recipe</h2>

<%= form_for :recipe do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :serving %><br>
    <%= f.text_area :text %>
  </p>

 <p>
    <%= f.label :item %><br>
    <%= f.text_area :string %>
  </p>

	<p>
		<%= f.submit 'Add Item'%> 
	</p>
 <p>
    <%= f.label :instructions %><br>
    <%= f.text_area :text %>
  </p>


  <p>
    <%= f.submit 'Create Recipe'%>
  </p>
<% end %>
